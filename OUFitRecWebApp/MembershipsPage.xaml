<Window x:Class="OUFitRecWebApp.MembershipsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OUFitRecWebApp"
        mc:Ignorable="d"
        Title="MembershipsPage" Height="780" Width="1280">
    <Grid>
        <!-- MemberPage Content -->
        <Grid x:Name="MemberPageContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Search Memberships Text -->
            <TextBlock x:Name="SearchMembershipsText" Text="Search Memberships" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,161,0,0" 
                       FontSize="36" FontWeight="Bold" Foreground="Black" FontFamily="SourceSansPro"/>

            <!-- F45 Text -->
            <TextBlock x:Name="F45Text" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,211,0,0" 
                       FontSize="36" FontWeight="Bold" Foreground="Black" FontFamily="SourceSansPro">
                <Run Text="F45"/>
                <LineBreak/>
                <Run Text="Must maintain an active FIT+REC membership in addition to F45 membership. Join the F45 movement! F45 is a 45-minute circuit style workout focusing on functional movement and a total body challenge. Team Training - Life Changing!" 
                     FontSize="18" FontWeight="Normal"/>
            </TextBlock>

            <!-- Fit Pass Text -->
            <TextBlock x:Name="FitPassText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,311,0,0" 
                       FontSize="36" FontWeight="Bold" Foreground="Black" FontFamily="SourceSansPro">
                <Run Text="Fit Pass"/>
                <LineBreak/>
                <Run Text="Join your OU FIT+REC family and allow us to support your fitness goals and help you stay connected. Enjoy unlimited access to a variety of FIT classes, such as Yoga, Zumba®, Cycling, Barre, and more!" 
                     FontSize="18" FontWeight="Normal"/>
            </TextBlock>

            <!-- Fit Pass Plus Text -->
            <TextBlock x:Name="FitPassPlusText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,411,0,0" 
                       FontSize="36" FontWeight="Bold" Foreground="Black" FontFamily="SourceSansPro">
                <Run Text="Fit Pass Plus"/>
                <LineBreak/>
                <Run Text="Join your OU FIT+REC family and allow us to support your fitness goals and help you stay connected! Enjoy unlimited access to both F45 and a variety of FIT classes." 
                     FontSize="18" FontWeight="Normal"/>
            </TextBlock>

            <!-- Spring Sports Pass Text -->
            <TextBlock x:Name="SpringSportsPassText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,509,0,0" 
                       FontSize="36" FontWeight="Bold" Foreground="Black" FontFamily="SourceSansPro">
                <Run Text="Spring Sports Pass"/>
                <LineBreak/>
                <Run Text="Currently Enrolled Students at OU-Norman, OU HSC, and OU Tulsa campuses at the University of Oklahoma are able to purchase a membership to Fitness and Recreation Intramural Sports for $20. Contact dewhirst@ou.edu for more information or eligiblity requirements." 
                     FontSize="18" FontWeight="Normal"/>
            </TextBlock>

            <!-- Buttons -->
            <Button x:Name="FPPB" Content="Fit Pass Plus" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,411,0,0" 
                    Width="200" Height="50" FontSize="18" FontWeight="Bold" Background="#841617" Foreground="White" FontFamily="SourceSansPro"/>
            <Button x:Name="F45B" Content="F45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,211,0,0" 
                    Width="200" Height="50" FontSize="18" FontWeight="Bold" Background="#841617" Foreground="White" FontFamily="SourceSansPro"/>
            <Button x:Name="FPB" Content="Fit Pass" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,311,0,0" 
                    Width="200" Height="50" FontSize="18" FontWeight="Bold" Background="#841617" Foreground="White" FontFamily="SourceSansPro"/>
            <Button x:Name="SSPB" Content="Spring Sports Pass" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,509,0,0" 
                    Width="200" Height="50" FontSize="18" FontWeight="Bold" Background="#841617" Foreground="White" FontFamily="SourceSansPro"/>
        </Grid>

        <!-- MemberPageNavTop -->
        <Grid x:Name="MemberPageNavTop" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100">
            <!-- MHomeIcon Button -->
            <Button x:Name="MHomeIcon" Style="{StaticResource EllipseButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- MSIB Button -->
            <Button x:Name="MSIB" Style="{StaticResource RectangleButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0"/>

            <!-- Sign In Text -->
            <TextBlock x:Name="SignInText" Text="Sign In" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" 
                       FontSize="24" FontWeight="Bold" Foreground="#841617" FontFamily="SourceSansPro"/>
        </Grid>

        <!-- MemberPageBottomNav -->
        <Grid x:Name="MemberPageBottomNav" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="150">
            <!-- WhiteOULogo -->
            <Image x:Name="WhiteOULogo" Source="whiteoulogo.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- Fitness + Recreation Text -->
            <TextBlock x:Name="FitnessText" Text="Fitness + Recreation" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="187,690,0,0" 
                       FontSize="18" FontWeight="Bold" Foreground="White" FontFamily="SourceSansPro"/>

            <!-- Address Text -->
            <TextBlock x:Name="AddressText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="187,717,0,0" 
                       FontSize="16" Foreground="White" FontFamily="SourceSansPro">
                <Run Text="1401 Asp Avenue, Room 170"/>
                <LineBreak/>
                <Run Text="Norman, OK 73019"/>
                <LineBreak/>
                <Run Text="(405) 325-0311"/>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
