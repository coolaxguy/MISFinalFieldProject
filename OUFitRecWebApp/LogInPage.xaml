<Window x:Class="OUFitRecWebApp.LogInPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OUFitRecWebApp"
        mc:Ignorable="d"
        Title="LogInPage" Height="780" Width="1280">
    <Grid>
        <!-- LogInPage Content -->
        <Grid x:Name="LogInPageContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Background Rectangles -->
            <Rectangle x:Name="Rectangle1" Fill="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="213,190,0,0" Width="774" Height="400"/>
            <Rectangle x:Name="Rectangle2" Fill="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="213,190,0,0" Width="774" Height="400" Opacity="0.5"/>

            <!-- Log In to OU Fit+Rec Text -->
            <TextBlock x:Name="LogInText" Text="Log In to OU Fit+Rec" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="213,190,0,0" 
                       FontSize="58" FontWeight="Bold" Foreground="#841617" FontFamily="SourceSansPro"/>

            <!-- Username Label -->
            <TextBlock x:Name="UsernameLabel" Text="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="331,270,0,0" 
                       FontSize="24" FontWeight="Bold" Foreground="#841617" FontFamily="SourceSansPro"/>

            <!-- Username TextBox (LIRU) -->
            <TextBox x:Name="LIRU" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="331,300,0,0" Width="400" Height="40" 
                     FontSize="18" FontFamily="SourceSansPro" Background="White" BorderBrush="Gray"/>

            <!-- Password Label -->
            <TextBlock x:Name="PasswordLabel" Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330,370,0,0" 
                       FontSize="24" FontWeight="Bold" Foreground="#841617" FontFamily="SourceSansPro"/>

            <!-- Password TextBox (LIRP) -->
            <TextBox x:Name="LIRP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330,400,0,0" Width="400" Height="40" 
                     FontSize="18" FontFamily="SourceSansPro" Background="White" BorderBrush="Gray"/>

            <!-- Log In Button (LILIB) -->
            <Button x:Name="LILIB" Content="Log In" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="531,494,0,0" 
                    Width="200" Height="50" FontSize="36" FontWeight="Bold" Foreground="White" Background="#841617" FontFamily="SourceSansPro"/>
        </Grid>

        <!-- LogInPageNavTop -->
        <Grid x:Name="LogInPageNavTop" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100">
            <!-- LIHomeIcon Button -->
            <Button x:Name="LIHomeIcon" Style="{StaticResource EllipseButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Grid>

        <!-- LogInPageBottomNav -->
        <Grid x:Name="LogInPageBottomNav" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="150">
            <!-- WhiteOULogo -->
            <Image x:Name="WhiteOULogo" Source="whiteoulogo.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- Fitness + Recreation Text -->
            <TextBlock x:Name="FitnessText" Text="Fitness + Recreation" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="186,690,0,0" 
                       FontSize="18" FontWeight="Bold" Foreground="White" FontFamily="SourceSansPro"/>

            <!-- Address Text -->
            <TextBlock x:Name="AddressText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="186,717,0,0" 
                       FontSize="16" Foreground="White" FontFamily="SourceSansPro">
                <Run Text="1401 Asp Avenue, Room 170"/>
                <LineBreak/>
                <Run Text="Norman, OK 73019"/>
                <LineBreak/>
                <Run Text="(405) 325-0311"/>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
