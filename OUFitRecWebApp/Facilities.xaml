        <!-- FacilitiesPageNavTop -->
        <Grid x:Name="FacilitiesPageNavTop" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100">
            <!-- FHomeIcon Button -->
            <Button x:Name="FHomeIcon" Style="{StaticResource EllipseButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- FSIB Button -->
            <Button x:Name="FSIB" Style="{StaticResource RectangleButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0"/>

            <!-- Sign In Text -->
            <TextBlock x:Name="SignInText" Text="Sign In" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" 
